<div  class="m-4">
    <h1 class="text-center">Inicio</h1>
</div>

<div class="container mb-5">
    <%= link_to "Dashboard", posts_dashboard_path, class:"btn btn-primary" %>
</div>

<div class="container">
    <table class="table border rounded">

        <thead class="thead-primary">
            <tr class="table-warning">
                <th>Titulo</th>
                <th>Fecha de ingreso</th>
                <th>Imagen</th>
                <th>Contenido</th>
            </tr>
        </thead>

        <% @posts.each do |post| %>
            <tr class="bg-light">
                <td><%= post.title %></td>
                <td><%= post.created_at %></td>
                <td><%= post.image_url %></td>
                <td><%= post.content %></td>
            </tr>
        <% end %>

    </table>
</div>