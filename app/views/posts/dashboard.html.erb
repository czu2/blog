
  <div class="text-center m-4">
    <h1>Dashboard</h1>
  </div>

<div class="container border rounded bg-light mt-4">
  <form id="create_posts" method="get" action="/posts/create">
  <h2 class="mt-4 mb-4">Crear Post</h2><hr>
    <div class="mt-3"> 
      <h4>Titulo</h4>
      <input name="title" class="form form-control">
    </div>
    
    <div class="mt-3">
      <h4>Imagen</h4>
      <input name="image_url" class="form form-control">
    </div>
    
    <div class="mt-3">
      <h4>Contenido</h4>
      <textarea name="content" class="form form-control"></textarea>
    </div>
    
    <span class="mt-3 mb-3 d-flex flex-row-reverse">
      <input type="submit" value="Publicar post" class="btn btn-success">    
      <%= link_to "Ir a inicio", posts_index_path, class:"btn btn-primary mr-5" %>
    </span>

  </form>


</div>


